{
    "name": "backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build-shared": "npm run build --prefix ../shared",
        "nodemon-watch-shared": "npm run nodemon-watch --prefix ../shared",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:watch": "nest start --watch",
        "start:dev": "concurrently -k -p \"[{name}]\" -n \"Shared,Backend\" -c \"bgGreen.bold,bgCyan.bold\" \"npm run nodemon-watch-shared\" \"npm run start:watch\"",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings=0",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "typeorm-ts-node-commonjs -d ormconfig.ts",
        "migration:generate": "npm run typeorm migration:generate",
        "migration:run": "npm run typeorm migration:run",
        "migration:create": "npx typeorm migration:create",
        "migration:revert": "typeorm migration:revert"
    },
    "dependencies": {
        "@nestjs/axios": "^3.0.0",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^7.1.17",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "concurrently": "^8.2.1",
        "cookie-parser": "^1.4.6",
        "dayjs": "^1.11.10",
        "dayjs-plugin-utc": "^0.1.2",
        "eslint-plugin-import": "^2.28.1",
        "helmet": "^7.0.0",
        "nest-winston": "^1.9.7",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "winston": "^3.14.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@nestjs/typeorm": "^10.0.1",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.6",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/passport-jwt": "^3.0.13",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typeorm": "^0.3.17",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "test",
        "testRegex": ".*\\.spec\\.ts$",
        "testPathIgnorePatterns": [
            "test/e2e"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
